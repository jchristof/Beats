<Page
    x:Class="Wavetable_Synth.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wavetable_Synth"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:midi="using:AudioSystem.Midi"
    xmlns:chart="using:Telerik.UI.Xaml.Controls.Chart"
    mc:Ignorable="d"
    Loaded="MainPage_OnLoaded"
    >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <midi:MidiInSelector DeviceSelectedEvent="MidiInSelector_OnDeviceSelectedEvent"/>
        <chart:RadCartesianChart  x:Name="radChart">
            <chart:RadCartesianChart.HorizontalAxis>
                <chart:CategoricalAxis/>
            </chart:RadCartesianChart.HorizontalAxis>
            <chart:RadCartesianChart.VerticalAxis>
                <chart:LinearAxis/>
            </chart:RadCartesianChart.VerticalAxis>
            <chart:LineSeries ItemsSource="{Binding}"/>
        </chart:RadCartesianChart>
    </Grid>
</Page>
