<UserControl
    x:Class="Beats.Midi.MidiSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Beats.Midi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Loaded="MidiSelector_OnLoaded"
    >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="midiInPortListBox" Grid.Column="0" SelectionChanged="midiInPortListBox_SelectionChanged"/>
        <ListBox x:Name="midiOutPortListBox" Grid.Column="1" SelectionChanged="midiOutPortListBox_SelectionChanged"/>
    </Grid>
</UserControl>
